<%= form_for [:app, @user] do |f| %>
  
  <div class="row">
    <div class="col-lg-6">
      <%= f.label :first_name %>
      <br/>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="col-lg-6">
      <%= f.label :last_name %>
      <br/>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-6">
      <%= f.label :gender %>
      <br/>
      <%= f.select :gender, User.gender.options, {prompt: t("messages.please_select")}, {class: "form-control"} %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-6">
      <%= f.label :birthday %>
      <br/>
      <%= f.date_field :birthday, class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-6">
      <%= f.label :phone %>
      <br/>
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  
  
<% if 3 == 4 %>
  <div class="row">
    <div class="col-lg-12">
      <%= f.label :address %>
      <br/>
      <%#= render "magic_addresses/addresses/fields/address", f: f %>
      <%= render "shared/address_field", f: f %>
    </div>
  </div>
<% end %>
  
  
  
  <br/>
  
  <div class="row">
    <div class="col-lg-6">
      <%= f.submit "Senden", class: "btn btn-brand btn-block", data: { disable_with: t("messages.sending") } %>
    </div>
  </div>
  
<% end %>
