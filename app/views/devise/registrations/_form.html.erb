<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "#{ request.xhr? ? 'form modal-form' : 'centered-form'}", autocomplete: :off}) do |f| %>
  
  <% unless request.xhr? %>
    <h2><%= t('devise.registrations.new.sign_up') %></h2>
    <%= devise_error_messages! %>
    <br/>
  <% end %>
  
  <%= render "devise/shared/omniauth_links", what: "sign_up" %>
  
  <%= f.hidden_field :signup_via, value: "app" %>
  <%= f.hidden_field :signup_url, value: fetch_current_domain %>
  
    
  <%#= f.text_field :first_name, class: "form-control", placeholder: t("helpers.label.user.first_name"), required: true, autofocus: true %>
  <%#= f.text_field :last_name, class: "form-control", placeholder: t("helpers.label.user.last_name"), required: true %>
  <%= f.email_field :email, class: "form-control", placeholder: t("helpers.placeholder.your_email"), required: true, autofocus: true %>
  <%= f.password_field :password, class: "form-control", placeholder: t("helpers.placeholder.your_password"), required: true %>
  <%#= f.password_field :password_confirmation, class: "form-control", placeholder: t("helpers.label.user.password_confirmation"), required: true %>

  

  <%= f.submit t('links.signup_for_free', :default => "Sign up"), class: "btn btn-lg btn-primary btn-block", data: {disable_with: t("messages.sending")} %>
  
  <%= render "devise/shared/links", current_action: "signup" %>
  
<% end %>