<div class="section sctn-xl">
  <div class="corset tight">
    
    <div class="clearfix"></div>
    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {class: "form", method: :post}) do |f| %>
      
      <%= devise_error_messages! %>
      
      
      <h1 class="inset"><%= t('devise.problems.headline') %></h1>
      
      <br/>
      <h2><%= t('devise.unlocks.new.headline') %></h2>
      <br/>
      <p><%= t('devise.unlocks.new.text_one') %></p>
      <p><%= t('devise.unlocks.new.text_two') %></p>
      <p><%= t('devise.unlocks.new.text_three') %></p>
      
      <br/>
      
      <div class="corset tight">
        <%= f.email_field :email, class: "form-control", placeholder: t("helpers.placeholder.your_email"), required: true, autofocus: true %>
        <%= f.submit t('buttons.send'), class: "btn btn-lg btn-primary btn-block", data: {disable_with: t("messages.sending")} %>
        <div class="clearfix"></div>
      </div>
      
      <br/>
      
      <%= render "devise/shared/links", current_action: "unlock" %>
      
    <% end %>
    <div class="clearfix"></div>
    
  </div>
</div>
