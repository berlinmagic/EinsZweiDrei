<% if 3 == 4 %>
  <h3><%= t("frontend.join.signup_for_free.headline") %></h3>
  <p><%= t("frontend.join.signup_for_free.text") %></p>
<% end %>


<% @new_user = User.new %>
<%= form_for(@new_user, as: :user, url: user_registration_path, html: {class: "centered-form", autocomplete: :off}) do |f| %>
  
  <%= render "devise/shared/omniauth_links", what: "sign_up" %>
  
  <%= f.hidden_field :signup_via, value: "app" %>
  <%= f.hidden_field :signup_url, value: fetch_current_domain %>
  
  
  <%= f.text_field :email, placeholder: t("helpers.label.user.email"), class: "form-control" %>
  
  <%= f.password_field :password, placeholder: t("helpers.label.user.password"), class: "form-control" %>
  
  
  <%= f.submit t('links.signup_for_free', :default => "Sign up"), class: "btn btn-lg btn-primary btn-block", data: {disable_with: t("messages.sending")} %>
  <% if 3 == 4 %>
  <button class="btn btn-primary btn-splited btn-agent btn-lg" disable_with="<%= t("messages.sending") %>">
    <span class="text"><%= t("signup_form.agent_signup") %></span>
    <span class="icn"><%= icon("arrow-right") %></span>
  </button>
  <% end %>
  
  <%= render "devise/shared/links", current_action: "signup" %>
  
<% end %>